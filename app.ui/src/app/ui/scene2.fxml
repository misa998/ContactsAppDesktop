<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="scene" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ui.ControllerScene2">

    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">

            <Label text="First name" textFill="#a8a6a6" GridPane.rowIndex="1" />
            <TextField fx:id="firstname2" promptText="Enter contact's first name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Last name" textFill="#a8a6a6" GridPane.rowIndex="2" />
            <TextField fx:id="lastname2" promptText="Enter last name of the contact" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Phone Number" textFill="#a8a6a6" GridPane.rowIndex="3" />
            <TextField fx:id="phone2" promptText="Enter contact's phone number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Notes" textFill="#a8a6a6" GridPane.rowIndex="4" />
            <TextArea fx:id="notes2" prefHeight="57.0" prefWidth="451.0" promptText="Enter notes here" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>
    </center>

</BorderPane>
